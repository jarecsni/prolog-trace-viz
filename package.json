{
  "name": "prolog-trace-viz",
  "version": "2.4.0",
  "description": "Generate enhanced visual trace diagrams for Prolog query execution",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "prolog-trace-viz": "dist/index.js",
    "ptv": "dist/index.js"
  },
  "files": [
    "dist/",
    "tracer.pl",
    "scripts/"
  ],
  "scripts": {
    "prebuild": "node scripts/generate-build-info.js",
    "build": "tsc -p tsconfig.prod.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "prolog",
    "trace",
    "visualization",
    "mermaid",
    "sldnfdraw",
    "swi-prolog",
    "logic-programming",
    "debugging",
    "flowchart",
    "cli-tool"
  ],
  "author": "Johnny Jarecsni <johnny.jarecsni@icloud.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jarecsni/prolog-trace-viz.git"
  },
  "homepage": "https://github.com/jarecsni/prolog-trace-viz",
  "bugs": {
    "url": "https://github.com/jarecsni/prolog-trace-viz/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "fast-check": "^3.14.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
