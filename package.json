{
  "name": "prolog-trace-viz",
  "version": "1.0.0",
  "description": "Generate enhanced visual trace diagrams for Prolog query execution",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "prolog-trace-viz": "dist/index.js",
    "ptv": "dist/index.js"
  },
  "files": [
    "dist/",
    "tracer.pl",
    "scripts/"
  ],
  "scripts": {
    "prebuild": "node scripts/generate-build-info.js",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "prolog",
    "trace",
    "visualization",
    "mermaid",
    "sldnfdraw"
  ],
  "author": "Johnny Recsni <johnny@recsni.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "fast-check": "^3.14.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
